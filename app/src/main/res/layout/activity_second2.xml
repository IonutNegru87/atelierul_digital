<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    android:orientation="vertical"
    android:scrollIndicators="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="@dimen/rectangle_size"
                android:layout_height="@dimen/rectangle_size"
                android:layout_alignParentStart="true"
                android:layout_margin="@dimen/margin_default"
                android:background="@color/orange" />

            <View
                android:id="@+id/rectangle_second"
                android:layout_width="@dimen/rectangle_size"
                android:layout_height="@dimen/rectangle_size"
                android:layout_marginStart="128dp"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="@dimen/margin_default"
                android:background="@color/blue" />

            <View
                android:id="@+id/rectangle_third"
                android:layout_width="@dimen/rectangle_size"
                android:layout_height="@dimen/rectangle_size"
                android:layout_marginStart="0dp"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_toEndOf="@id/rectangle_second"
                android:background="@color/green" />

            <View
                android:layout_width="@dimen/rectangle_size"
                android:layout_height="@dimen/rectangle_size"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                android:background="@color/orange" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scrollview_content"
            android:padding="16dp"/>

    </LinearLayout>

</ScrollView>