<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GreenButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">#7CFC00</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="BlueButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:backgroundTint">#0000FF</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownSpinnerStyle">@style/TextAppearance.AppCompat.Widget.DropDownItem</item>
        <item name="android:spinnersShown">false</item>
        <item name="android:dropDownWidth">32dp</item>
    </style>

</resources>
